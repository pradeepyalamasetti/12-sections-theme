.nav-title {
  list-style: none;
  margin: 0;
  padding: 0;
  display: flex;
  justify-content: space-between;
  background-color: #2196f3;
}

.parent-link {
  display: inline-block;
  padding: 10px;
}

.parent-link a {
  text-decoration: none;
  color:white;
  font-size: 16px;
}

.child-title {
  list-style: none;
  display: none;
  position: absolute;
  background-color: black;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
}

.parent-link:hover .child-title {
  display: block;
}

.child-title li {
  display: block;
  padding: 10px;
  border-bottom: 1px solid gray;
}

.grandchild {
  display: none;
  position: absolute;
  left: 100%;
  top: 0;
  background-color: black;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
}

.child-title li:hover .grandchild {
  display: block;
}


{% endstyle %}