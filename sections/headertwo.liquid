<nav role="navigation">
  <div id="hamburger">
  </div>
  <ul id="nav-menu" class="nav-title">
    {%- for link in linklists.main-menu.links -%}
      <li class="parent-link">
        <a href="{{ link.url }}" {% if link.active %}aria-current="page"{% endif %}>
          {{ link.title }}
        </a>
        {%- if link.links != blank -%}
          <ul class="child-title">
            {%- for child_link in link.links -%}
              <li>
                <a href="{{ child_link.url }}" {% if child_link.active %}aria-current="page"{% endif %}>
                  {{ child_link.title }}
                </a>
                {%- if child_link.links != blank -%}
                  <ul class="grandchild">
                    {%- for grandchild_link in child_link.links -%}
                      <li>
                        <a href="{{ grandchild_link.url }}" {% if grandchild_link.active %}aria-current="page"{% endif %}>
                          {{ grandchild_link.title }}
                        </a>
                      </li>
                    {%- endfor -%}
                  </ul>
                {%- endif -%}
              </li>
            {%- endfor -%}
          </ul>
        {%- endif -%}
      </li>
    {%- endfor -%}
  </ul>
</nav>


{% style %}
.nav-title {
  list-style: none;
  margin: 0;
  padding: 0;
  display: flex;
  justify-content: space-between;
  background-color: #2196f3;
}

.parent-link {
  display: inline-block;
  padding: 10px;
}

.parent-link a {
  text-decoration: none;
  color:white;
  font-size: 16px;
}

.child-title {
  list-style: none;
  display: none;
  position: absolute;
  background-color: black;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
}

.parent-link:hover .child-title {
  display: block;
}

.child-title li {
  display: block;
  padding: 10px;
  border-bottom: 1px solid gray;
}

.grandchild {
  display: none;
  position: absolute;
  left: 100%;
  top: 0;
  background-color: black;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
}

.child-title li:hover .grandchild {
  display: block;
}

#hamburger {
  display: none;
  cursor: pointer;
}

@media (max-width: 768px) {
  .nav-title {
    display: none;
  }

  #hamburger {
    display: block;
  }
}

#hamburger span {
  display: block;
  height: 2px;
  width: 30px;
  margin: 5px 0;
  background-color: white;
}

{% endstyle %}

<script >

  const hamburger = document.querySelector('#hamburger');
const navMenu = document.querySelector('#nav-menu');

hamburger.addEventListener('click', function () {
  navMenu.classList.toggle('show');
});

</script>