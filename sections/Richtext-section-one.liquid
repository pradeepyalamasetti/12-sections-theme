          "value":"left",
          "label":"left"
        },
        {
          "value":"center",
          "label":"center"
        },
        {
          "value":"right",
          "label":"right"
        }
      ],
      "default":"center"
    }
  ],
  "presets" : [
    {
      "name" : "Richtext Section One"
    }
  ]
}
{% endschema %}
