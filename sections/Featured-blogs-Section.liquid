<div class="blog-post">
<div class="heading-text center">
  {% if section.settings.heading_text %}
    <h4>{{ section.settings.heading_text }}</h4>
  {% endif %}
</div>

{% if section.settings.blog.articles.size > 0 %}
  <div class="featured-blogs container">
    <div class="flexbox">
      {% for article in section.settings.blog.articles limit: 3 %}
        <div class="flexbox-item">
          {% render 'article-card', article: article %}
        </div>
      {% endfor %}
    </div>
  </div>
{% endif %}
</div>

{% schema %}
{
  "name": "Featured blogs Section",
  "tag": "section",
  "class": "homepage-section",
  "settings": [
    {
      "type":"text",
      "id":"heading_text",
      "label":"Heading text"
    },
    {
      "type":"blog",
      "id":"blog",
      "label":"Choose blog"
    }
  ],
  "presets": [
    {
      "name": "Featured blogs Section"
    }
  ]
}
{% endschema %}
